section.add-athlete
  center(900px)
  padding 20px
  
  .col-wrap
    cf()
  
  .img-upload
    span(1/9)
    
    a
      display block
      width 100px
      height @width
      box-sizing border-box
      padding 18px
      color #90a4ae
      background #cfd8dc
  
  .form-col
    span(4/9)
    
    fieldset
      margin-left 20px
      
      input[type='text']
        color #607d8b
      
      &.input-field
        .select-wrapper
          margin 0 0 30px
  
  .details-add
    text-align right
    
    a.gray
      background #90a4ae